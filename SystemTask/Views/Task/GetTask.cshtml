
@model IEnumerable<SystemTask.Models.Task>

<p><h2>   </h2></p>

<div class="form-group">
    <div >
        <button href="#" class="btn btn-primary" onclick="location.href='@Url.Action("AddTask", "Task")';return false;">Create New Task</button>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            #            
        </th>
        <th>
            Task
        </th>
        <th>
            Description
        </th>
        <th>
            Status            
        </th>
        <th>
            Check
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdTask)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nameTask)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditTask", new { idTask = item.IdTask }) |            
            @Html.ActionLink("Delete", "DeleteTask", new { idTask = item.IdTask }, new { onclick = "return confirm('Are you sure you want to delete this task?');" })
        </td>     

    </tr>
}



</table>

<label id="textocambio">  </label>
